{
  /*
   * ==========================================================================
   *                      EDITOR CORE & VIM BEHAVIOR                           
   * ==========================================================================
   */
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "cursor_blink": false,
  "tab_size": 2,
  "extend_comment_on_newline": false,
  "vertical_scroll_margin": 1,
  "when_closing_with_no_tabs": "keep_window_open",
  "close_on_file_delete": true,

  /*
   * ==========================================================================
   *                  AI & AGENT RESTRICTIONS (DISABLED)                       
   * ==========================================================================
   */
  "disable_ai": true,
  "agent": {
    "button": false,
  },

  /*
   * ==========================================================================
   *                            TYPOGRAPHY & FONTS                             
   * ==========================================================================
   */
  "ui_font_size": 12,
  "ui_font_family": "ComicShannsMono Nerd Font Mono",
  "buffer_font_size": 12,
  "buffer_font_family": "ComicShannsMono Nerd Font Mono",
  "terminal": {
    "font_family": "ComicShannsMono Nerd Font Mono",
    "font_size": 12,
  },

  /*
   * ==========================================================================
   *                        VISUAL THEME & UI SURFACES                         
   * ==========================================================================
   */
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Aura Dark",
  },
  "icon_theme": "Warm Charmed Icons",
  "scrollbar": {
    "show": "never",
  },
  "title_bar": {
    "show_onboarding_banner": false,
  },
  "tab_bar": {
    "show_tab_bar_buttons": false,
  },
  "toolbar": {
    "quick_actions": false,
  },
  "gutter": {
    "min_line_number_digits": 0,
  },

  /*
   * ==========================================================================
   *                        PROJECT PANEL & NAVIGATION                         
   * ==========================================================================
   */
  "project_panel": {
    "auto_fold_dirs": false,
    "starts_open": false,
    "scrollbar": {
      "show": "never",
    },
  },

  /*
   * ==========================================================================
   *                          THEME OVERRIDES (AURA DARK)                      
   * ==========================================================================
   */
  "theme_overrides": {
    "Aura Dark": {
      "border.variant": "#15141C",
      "title_bar.background": "#15141C",
      "panel.background": "#15141C",
      "panel.focused_border": "#4E466E",
      "syntax": {
        "comment": {
          "font_style": "italic",
        },
        "comment.doc": {
          "font_style": "italic",
        },
      },
    },
  },
}
